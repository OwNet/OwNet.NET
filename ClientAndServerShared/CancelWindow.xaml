<Window x:Class="ClientAndServerShared.CancelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Please Wait" Height="129" Width="375" Closing="Window_Closing">
    <Grid>
        <Label Content="Please wait while the action is being performed." Height="28" HorizontalAlignment="Left" Margin="12,12,0,0" Name="lblMessage" VerticalAlignment="Top" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Right" Margin="0,0,12,12" Name="btnCancel" VerticalAlignment="Bottom" Width="75" IsCancel="True" />
    </Grid>
</Window>
